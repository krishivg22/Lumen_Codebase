<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scene_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <!-- Camera preview (top half) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewViewScene"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.48"/>

    <ImageButton
        android:id="@+id/btnBackScene"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_media_previous"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Offline badge (top-right) -->
    <TextView
        android:id="@+id/offlineBadgeScene"
        android:text="OFFLINE"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="#B00020"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp"/>

    <!-- Small hint -->
    <TextView
        android:id="@+id/sceneHint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Point the camera at the scene and press Capture or Upload an image"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/previewViewScene"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Capture and Upload buttons centered below preview -->
    <LinearLayout
        android:id="@+id/capture_upload_row_scene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/sceneHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <ImageButton
            android:id="@+id/btnCaptureScene"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@android:drawable/ic_menu_camera"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Capture Scene"/>

        <ImageButton
            android:id="@+id/btnUploadScene"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@android:drawable/ic_menu_upload"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Upload Image"
            android:layout_marginStart="12dp"/>
    </LinearLayout>


    <!-- Small progress / status -->
    <TextView
        android:id="@+id/sceneStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="13sp"
        android:alpha="0.9"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/capture_upload_row_scene"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:padding="8dp"/>

    <!-- Feature buttons (hidden until caption/processing complete) -->
    <LinearLayout
        android:id="@+id/featurePanelScene"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/sceneStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnReadAloudScene"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Read Aloud"
            android:padding="12dp"/>

        <!-- Ask Queries button removed for Scene mode -->
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/featurePanelScene"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Scene caption / text preview (scrollable) -->
    <ScrollView
        android:id="@+id/textPreviewScrollScene"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/featurePanelScene"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvSceneText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
