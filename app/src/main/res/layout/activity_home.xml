<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FAFAFA">

    <!-- App Title -->
    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lumen"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/homeSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assistive Vision"
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/homeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Button Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/homeSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="48dp">

        <!-- Object Mode Card -->
        <LinearLayout
            android:id="@+id/cardObject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/home_button_bg"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/btnObjectMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Object Recognition"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Live Text Mode Card -->
        <LinearLayout
            android:id="@+id/cardLiveText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/home_button_bg"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/btnLiveTextMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Text Reader"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Document Mode Card -->
        <LinearLayout
            android:id="@+id/cardDocument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/home_button_bg"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/btnDocumentMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Document Assistant"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardScene"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/home_button_bg"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/btnSceneMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scene Description"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
